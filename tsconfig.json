{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@ai/*": ["AI/*"],
      "@nonai/*": ["Non_AI/*"],
      "@core/*": ["*"]
    }
  },
  "include": ["src/**/*"]
}
